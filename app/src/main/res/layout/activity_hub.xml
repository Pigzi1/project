<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HubActivity"
    android:orientation="vertical"
    android:background="@drawable/border_hub">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="@null"
        android:text="Play"
        android:textColor="@color/white"
        android:fontFamily="@font/ahronbd"
        android:textSize="50sp"
        android:id="@+id/btPlay"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/shape_button"
            android:text="Options"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/btOptions"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/shape_button"
            android:text="Statistics"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:id="@+id/btStatistics"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/shape_button"
            android:text="Account"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/btAccount"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/shape_button"
            android:text="Achievements"
            android:textColor="@color/white"
            android:fontFamily="@font/ahronbd"
            android:textSize="20sp"
            android:id="@+id/btAchievements"/>
    </LinearLayout>

</LinearLayout>